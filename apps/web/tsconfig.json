{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@billwise/trpc": ["../../packages/trpc/src"],
      "@billwise/db": ["../../packages/db/src"],
      "@billwise/utils": ["../../packages/utils/src"]
    },
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "include": ["app", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"],
  "references": [
    {
      "path": "../../packages/db"
    },
    {
      "path": "../../packages/trpc"
    },
    {
      "path": "../../packages/utils"
    }
  ]
}
