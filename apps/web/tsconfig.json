{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ESNext"
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"],
  "paths": {
    "@billwise/trpc": ["../../packages/trpc/src"],
    "@billwise/db": ["../../packages/db/src"]
  },
  "references": [{ "path": "../../packages/db" }, { "path": "../../packages/trpc" }]
}
