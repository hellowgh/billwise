{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve", // support jsx
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "paths": {
      "@billwise/trpc": ["../../packages/trpc/src"],
      "@billwise/db": ["../../packages/db/src"],
      "@billwise/utils": ["../../packages/utils/src"]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "references": [
    {
      "path": "../../packages/db"
    },
    {
      "path": "../../packages/trpc"
    },
    {
      "path": "../../packages/utils"
    }
  ],
  "exclude": ["node_modules"]
}
