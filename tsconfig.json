// tsconfig.json
{
  "files": [],
  "references": [
    { "path": "packages/db" },
    { "path": "packages/trpc" },
    { "path": "packages/utils" },
    { "path": "apps/web" }
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".", // 不建议加 paths
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", ".next"]
}
