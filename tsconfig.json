{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@web/*": ["apps/web/*"],
      "@prisma/*": ["prisma/*"],
      "@scripts/*": ["scripts/*"]
    },
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", ".next"]
}
